{
  "manifestVersion": 1,
  "id": "pr-pulse",
  "name": "PR Pulse",
  "version": "1.0.1",
  "publisher": "bacumi",
  "public": true,
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "description": "The intelligent dashboard for all active pull requests, with built-in staleness alerts to keep your team moving.",
  "categories": [
    "Azure Repos"
  ],
  "icons": {
    "default": "images/logo.png"
  },
  "scopes": [
    "vso.code"
  ],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "files": [
    {
      "path": "index.html",
      "addressable": true
    },
    {
      "path": "main.js",
      "addressable": true
    },
    {
      "path": "helpers.js",
      "addressable": true
    },
    {
      "path": "lib",
      "addressable": true
    },
    {
      "path": "images",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "pr-pulse-hub",
      "type": "ms.vss-web.hub",
      "targets": [
        "ms.vss-code-web.code-hub-group"
      ],
      "properties": {
        "name": "PR Pulse",
        "icon": "images/hub-icon.png",
        "uri": "index.html",
        "order": 35
      }
    }
  ]
}
